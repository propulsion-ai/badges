{
  "name": "consistint",
  "version": "1.1.0",
  "description": "Consistent tints for your badges - A lightweight React component library for creating beautiful, auto-colored badges with consistent pastel colors",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p config/tsconfig.build.json",
    "test": "jest --config config/jest.config.js",
    "test:watch": "jest --watch --config config/jest.config.js",
    "test:coverage": "jest --coverage --config config/jest.config.js",
    "dev": "vite --config vite.demo.config.ts",
    "build:demo": "vite build --config vite.demo.config.ts",
    "preview": "vite preview --config vite.demo.config.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "color-hash": "^2.0.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.1",
    "@types/color-hash": "^1.0.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "react-dom": "^18.3.1",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.7"
  },
  "keywords": [
    "badge",
    "color",
    "generator",
    "react",
    "typescript",
    "ui",
    "component",
    "pastel",
    "tags",
    "labels"
  ],
  "author": "Propulsion AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/propulsion-ai/badges.git"
  },
  "bugs": {
    "url": "https://github.com/propulsion-ai/badges/issues"
  },
  "homepage": "https://propulsion-ai.github.io/badges/",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
